---
import Layout from '@layouts/Page.astro';

import { Icon } from 'astro-icon/components';
---

<Layout description="Looking to contact us? Let us know!" pageTitle="Contact" title="Contact | Parallel Program Report">
  <div class="flex flex-col gap-3 pb-5 pt-3">
    <h1 class="title">Contact</h1>

    <span>Looking to contact us? Let us know!</span>
  </div>

  <div class="flex flex-col items-center justify-center gap-10 text-center">
    <div class="flex flex-col items-center justify-center gap-3">
      <h1 class="text-3xl md:text-4xl">I'm contacting as...</h1>
      <div class="flex flex-col flex-wrap gap-3 md:flex-row">
        <a
          href="/contact/maintainer"
          class="flex flex-row items-center gap-2 rounded-lg bg-ctp-sky p-3 text-center text-ctp-base transition ease-out hover:opacity-80"
        >
          <Icon name="mdi:tools" />
          A maintainer
        </a>
        <a
          href="/contact/contributor"
          class="flex flex-row flex-wrap items-center gap-2 rounded-lg bg-ctp-green p-3 text-center text-ctp-base transition ease-out hover:opacity-80"
        >
          <Icon name="mdi:user" />
          A contributor
        </a>
      </div>
    </div>

    <div class="flex flex-col items-center gap-3">
      <h1 class="text-3xl md:text-4xl">Have a general question?</h1>
      <span>Feel free to fill out the form and we'll take a look.</span>
      <a
        href="/contact/general"
        class="flex flex-row items-center gap-2 rounded-lg bg-ctp-red p-3 text-center text-ctp-base transition ease-out hover:opacity-80"
      >
        <Icon name="mdi:message" />
        Leave a message
      </a>
    </div>
  </div>
</Layout>

---
import { Icon } from 'astro-icon/components';
---

<form class="flex flex-col gap-4" action="/api/contact/general" method="POST">
  <div>
    <label for="name">Your name</label>
    <input type="text" id="name" name="name" placeholder="John Doe" required />
    <p>This can be your preferred name.</p>
  </div>

  <div>
    <label for="contact">Your means of communication</label>
    <input type="text" id="contact" name="contact" placeholder="Email (hello@example.com), Discord tag (username), etc" required />
    <p>If you don't include a contact method, we won't be able to reach back to you.</p>
  </div>

  <div>
    <label for="message">Your message</label>
    <textarea id="message" name="message" required placeholder="Hello, world!" rows="2"></textarea>
    <p>Your message goes here!</p>
  </div>

  <div class="cf-turnstile" data-sitekey={import.meta.env.TURNSTILE_SITE_KEY}></div>

  <div>
    <button type="submit">
      <Icon name="mdi:alternate-email" />
      Submit
    </button>
  </div>
</form>

<style>
  label {
    @apply block pb-1 font-semibold;
  }

  input,
  textarea {
    @apply w-full rounded-md border-2 border-ctp-surface2 border-opacity-60 bg-ctp-base px-4 py-2 transition ease-out focus:border-ctp-red focus:outline-none focus:ring-0;
  }

  textarea + p {
    @apply -mt-1.5;
  }

  p {
    @apply pt-1 text-base opacity-80;
  }

  button {
    @apply flex flex-row items-center gap-2 rounded-lg bg-ctp-red p-3 text-center font-medium text-ctp-base transition ease-out hover:opacity-80;
  }
</style>

---
import site from '@config';
import SEO from '@components/HeadMeta.astro';
import { IS_PRODUCTION } from '@utils/helpers';

import { ClientRouter } from 'astro:transitions';

const { description, pageTitle, title } = Astro.props;
---

<head>
  {
    IS_PRODUCTION && !!site.analytics && !!site.name && (
      <script is:inline defer src="https://umami.sappho.systems/script.js" data-website-id="c4e97269-c2b7-4cb7-a583-4b9b488e8dfe" />
    )
  }

  <ClientRouter />

  <SEO {description} {pageTitle} {title} />

  <slot />
</head>
